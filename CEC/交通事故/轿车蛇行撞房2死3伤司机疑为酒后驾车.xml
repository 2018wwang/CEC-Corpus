<?xml version="1.0" encoding="GB2312"?>
<Body>   <Title>轿车蛇行撞房2死3伤 司机疑为酒后驾车</Title>
	<ReportTime type="absTime">2008-6-2 9:05:02</ReportTime>
	<Content>
	
    <Paragraph>
    	<Sentence>
    		<Event eid="e1">
    			<Time type="relTime" tid="t1">前晚7时30分许</Time>，
    			<Location lid="l1">通州西集镇郎府卫生院西侧路口</Location>，
    			<Object sid="s1,s2,s3,s4">一辆轿车</Object>
    			<Denoter type="action" did="d1">冲</Denoter>下
    			<Location lid="l1">路基</Location>
    		</Event>,
    		<Event eid="e2">
    			<Denoter type="action" did="d2">撞倒</Denoter>
    			<Participant oid="o2">多名路人</Participant>
    		</Event>、
    		<Event eid="e3">
    			<Denoter type="action" did="d3">撞穿</Denoter>
    			<Object oid="o3">一间民房外墙</Object>
    		</Event>后<Event eid="e4">
    			<Denoter type="action" did="d4">停下</Denoter>
    		</Event>。
    	</Sentence>
    	<Sentence>
	    	<Event eid="e5">事故致
	    		<Participant oid="o5">一名3岁男童</Participant>
	    		<Time type="relTime" tid="t5">当场</Time>
	    		<Denoter type="stateChange" did="d5">死亡</Denoter>
	    	</Event>，
	    	<Event eid="e6">
	    		<Participant oid="o6">一名15岁少年</Participant>送医后不治
	    		<Denoter type="stateChange" did="d6">身亡</Denoter>
	    	</Event>，
	    	<Event eid="e7">另有
	    		<Participant oid="o7">3人</Participant>
	    		<Denoter type="stateChange" did="d7">受伤</Denoter>
	    	</Event>。
    	</Sentence>
	</Paragraph>
	<Paragraph>
		<Sentence>
			<Event eid="e8">
				<Participant oid="o8">附近居民</Participant>
				<Denoter type="statement" did="d8">称</Denoter>
			</Event>，
			<Event eid="e9">
				<Object oid="o9">肇事车</Object>
				<Time type="relTime" tid="t9">当时</Time>左右
				<Denoter type="action" did="d9">摇摆</Denoter>如蛇行
			</Event>，
			<Event eid="e10">
				<Participant oid="o10">司机</Participant>被
				<Denoter type="operation" did="d10">救出</Denoter>时浑身酒气
			</Event>。
		</Sentence>
		<Sentence>
			<Event eid="e11">
				<Time type="relTime" tid="t11">当晚</Time>，
				<Participant sid="s11">警方</Participant>对
				<Participant oid="o11">肇事司机</Participant>进行了
				<Denoter type="operation" did="d11">血液取样</Denoter>
			</Event>，
			<Event eid="e12">
				<Time type="relTime" tid="t12">目前</Time>在进一步
				<Denoter type="operation" did="d12">调查</Denoter>中
			</Event>。
		</Sentence>
	</Paragraph>
</Content>
